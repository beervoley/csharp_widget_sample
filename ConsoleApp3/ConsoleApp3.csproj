<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net6.0-windows10.0.19041</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Windows.CsWinRT" Version="2.0.0" />
		<PackageReference Include="Microsoft.Windows.Widgets" Version="0.3.14" GeneratePathProperty="true">
		  <PrivateAssets>all</PrivateAssets>
		</PackageReference>
	</ItemGroup>

	<Target Name="CopyWinMD" AfterTargets="Build">
		<Copy SourceFiles="$(PkgMicrosoft_Windows_Widgets)\lib\native\Microsoft.Windows.Widgets.winmd" DestinationFolder="$(OutDir)" />
	</Target>

</Project>
